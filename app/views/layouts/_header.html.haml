%nav.navbar.navbar-default{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-toggle" => "collapse", "data-target" => "#bs-example-navbar-collapse-1"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Movie Reviews", root_path, class: "navbar-brand"

    .collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav
        - if user_signed_in?
          %li
            = link_to "New Movie", new_movie_path, class: "active"
          %li
            = link_to "Account", edit_user_registration_path
        - else
          %li
            = link_to "Sign Up", new_user_registration_path, class: "active"
          %li
            = link_to "Sign In", new_user_session_path, class: "active"

      = form_tag movies_path, method: :get, class: "navbar-form navbar-right form-inline", id: "search_form", role: "search" do
        .input-group
          = text_field_tag :search, params[:search], autocomplete: :off, class: "form-control", id: "query"
          .input-group-btn.search-panel
            = submit_tag "Search", name: nil, class: 'btn btn-default'
